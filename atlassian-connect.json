{
  "key": "my-app",
  "name": "My app",
  "description": "My very first app",
  "baseUrl": "https://93eb-41-250-67-93.ngrok-free.app",
  "authentication": {
    "type": "jwt"
  },
  "lifecycle": {
    "installed": "/installed",
    "enabled": "/enabled",
    "disabled": "/disabled",
    "uninstalled": "/uninstalled"
  },
  "scopes": [
    "READ",
    "WRITE"
  ],
  "apiMigrations": {
    "signed-install": true
  },
  "modules": {
    "generalPages": [
      {
        "key": "hello-world-page-jira",
        "location": "system.top.navigation.bar",
        "name": {
          "value": "TimeTracking"
        },
        "url": "/hello-world",
        "conditions": [{
          "condition": "user_is_logged_in"
        }]
      }
    ],
    "jiraTimeTrackingProviders": [
      {
        "name": {
          "value": "TimeTracking"
        },
        "key": "react-time-tracking",
        "modules": {
          "configurePage": {
            "key": "time-tracking-config"
          }
        }
      }
    ],
    "dialogs": [
      {
        "url": "/item",
        "options": {
          // "size" bellow defines how the size of the dialog clicked from ANY BUTTON EXCEPT THE "Saisie de temps" BUTTON
          "size": "small",
          "header": {
            "value": "Worklog Form"
          }
        },
        "key": "dialog"
      }
    ]
  }
}
